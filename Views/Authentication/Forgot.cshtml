@using BEARLINGO
@using BEARLINGO.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-controller="ForgotPassword" asp-action="ForgotPassword" method="post">
    <input name="email" type="text"/>
    @if (ViewBag.messageError != null)
    {
        <div style="color:red">@ViewBag.messageError</div>
    }
    <input type="submit" value="Send"/>
</form>
